<style>
.page-header {
    background: var(--surface);
    border-bottom: 2px solid var(--border-accent);
    padding: 4rem 0;
    margin-bottom: 0;
}

.page-header h1 {
    font-size: 3rem;
    font-family: var(--font-display);
    text-transform: uppercase;
    letter-spacing: 4px;
    margin-bottom: 1rem;
}

.lead {
    font-family: var(--font-mono);
    color: var(--text-secondary);
    font-size: 1.1rem;
    letter-spacing: 2px;
}

.programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.program-card {
    background: var(--surface);
    padding: 2.5rem;
    border: 2px solid var(--border);
    border-top: 5px solid var(--accent);
    position: relative;
    clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
    transition: all 0.3s ease;
}

.program-card:hover {
    transform: translateY(-8px);
    border-top-width: 8px;
    box-shadow: 0 15px 40px rgba(118, 255, 3, 0.2);
}

.program-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: var(--accent);
    color: var(--background);
    padding: 0.35rem 0.9rem;
    font-size: 0.65rem;
    font-weight: bold;
    font-family: var(--font-mono);
    letter-spacing: 1px;
    clip-path: polygon(5px 0, 100% 0, calc(100% - 5px) 100%, 0 100%);
}

.program-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 0 15px var(--accent));
}

.program-card h2 {
    font-size: 2rem;
    font-family: var(--font-display);
    color: var(--accent);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.program-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
}

.program-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
}

.feature-tag {
    background: var(--surface-elevated);
    border: 1px solid var(--border-accent);
    color: var(--text-secondary);
    padding: 0.4rem 0.8rem;
    font-size: 0.75rem;
    font-family: var(--font-mono);
}

.program-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
}

.program-stats .stat {
    text-align: center;
}

.program-stats strong {
    display: block;
    font-size: 1.8rem;
    font-family: var(--font-display);
    color: var(--accent);
    margin-bottom: 0.25rem;
}

.program-stats span {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: var(--font-mono);
}

@@media (max-width: 768px) {
    .programs-grid {
        grid-template-columns: 1fr;
    }

    .page-header h1 {
        font-size: 2rem;
    }
}
</style>
