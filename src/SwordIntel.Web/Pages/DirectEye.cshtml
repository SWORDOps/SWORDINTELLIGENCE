<style>
.restricted-access-banner {
    background: repeating-linear-gradient(
        45deg,
        var(--classified),
        var(--classified) 20px,
        var(--background) 20px,
        var(--background) 40px
    );
    padding: 0.75rem 0;
    text-align: center;
    border-bottom: 3px solid var(--classified);
}

.classified-marker {
    font-family: var(--font-mono);
    font-weight: bold;
    color: var(--background);
    background: var(--classified);
    padding: 0.25rem 1rem;
    margin-right: 1rem;
    clip-path: polygon(5px 0, 100% 0, calc(100% - 5px) 100%, 0 100%);
}

.restriction-text {
    font-family: var(--font-mono);
    font-weight: bold;
    color: var(--classified);
    letter-spacing: 2px;
    font-size: 0.9rem;
}

.directeye-header {
    background: var(--surface);
    padding: 6rem 0 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.directeye-header::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(118, 255, 3, 0.1) 0%, transparent 70%);
}

.header-badge {
    display: inline-block;
    background: var(--accent);
    color: var(--background);
    padding: 0.5rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: bold;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    clip-path: polygon(10px 0, 100% 0, calc(100% - 10px) 100%, 0 100%);
}

.directeye-header h1 {
    font-family: var(--font-display);
    font-size: 5rem;
    font-weight: 900;
    letter-spacing: 8px;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    position: relative;
    z-index: 1;
}

[data-theme="ops"] .directeye-header h1 {
    text-shadow: 0 0 30px var(--accent), 0 0 60px var(--accent);
}

.tagline {
    font-family: var(--font-mono);
    font-size: 1.3rem;
    color: var(--text-secondary);
    letter-spacing: 4px;
    margin-bottom: 2rem;
}

.status-indicators {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.status-badge {
    background: var(--surface-elevated);
    border: 1px solid var(--border-accent);
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-secondary);
}

.highlights-section,
.specs-section,
.phases-section,
.performance-section,
.access-section {
    margin-bottom: 5rem;
}

.highlights-section h2,
.specs-section h2,
.phases-section h2,
.performance-section h2 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 3rem;
}

.capabilities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
}

.capability-card {
    background: var(--surface);
    padding: 2.5rem;
    border: 2px solid var(--border);
    border-left: 5px solid var(--accent);
    transition: all 0.3s ease;
}

.capability-card:hover {
    transform: translateX(10px);
    border-left-width: 8px;
    box-shadow: -8px 8px 25px rgba(118, 255, 3, 0.2);
}

.capability-icon {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 0 15px var(--accent));
}

.capability-card h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--accent);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.capability-card p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.7;
}

.capability-stat {
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
    text-align: center;
}

.capability-stat strong {
    display: block;
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--accent);
}

.specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.spec-category {
    background: var(--surface);
    padding: 2rem;
    border: 2px solid var(--border);
    border-top: 4px solid var(--accent);
}

.spec-category h3 {
    font-family: var(--font-display);
    color: var(--accent);
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
}

.spec-list {
    list-style: none;
    padding: 0;
}

.spec-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.spec-list li:last-child {
    border-bottom: none;
}

.spec-list strong {
    color: var(--text-primary);
}

.phases-timeline {
    display: grid;
    gap: 1.5rem;
}

.phase-item {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 2rem;
    background: var(--surface);
    padding: 2rem;
    border: 2px solid var(--border);
    position: relative;
}

.phase-item.completed {
    border-left: 5px solid var(--milspec-green);
}

.phase-number {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--accent);
    text-align: center;
    align-self: center;
}

.phase-content h4 {
    font-family: var(--font-display);
    color: var(--accent);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
}

.phase-content p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
}

.phase-status {
    display: inline-block;
    background: var(--milspec-green);
    color: var(--background);
    padding: 0.25rem 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: bold;
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
}

.metric-card {
    background: var(--surface);
    padding: 2rem;
    border: 3px solid var(--border-accent);
    text-align: center;
    clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.metric-value {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 900;
    color: var(--accent);
    line-height: 1;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 15px var(--accent);
}

.metric-label {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
}

.metric-comparison {
    font-size: 0.85rem;
    color: var(--milspec-green);
    font-weight: bold;
}

.access-box {
    background: var(--surface);
    padding: 4rem;
    border: 3px solid var(--classified);
    text-align: center;
}

.access-box h2 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 3px;
}

.access-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto 3rem;
    line-height: 1.8;
}

.access-requirements {
    background: var(--surface-elevated);
    padding: 2rem;
    margin-bottom: 3rem;
    border-left: 4px solid var(--classified);
    text-align: left;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 3rem;
}

.access-requirements h3 {
    font-family: var(--font-display);
    color: var(--classified);
    margin-bottom: 1rem;
    font-size: 1.2rem;
}

.access-requirements ul {
    list-style: none;
    padding: 0;
}

.access-requirements li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
    color: var(--text-secondary);
}

.access-requirements li::before {
    content: '‚úì ';
    color: var(--milspec-green);
    font-weight: bold;
    margin-right: 0.5rem;
}

.access-cta {
    border-top: 2px solid var(--border);
    padding-top: 2rem;
}

.access-cta p {
    font-size: 1.2rem;
    color: var(--text-primary);
    font-family: var(--font-display);
}

@@media (max-width: 768px) {
    .directeye-header h1 {
        font-size: 3rem;
    }

    .capabilities-grid,
    .specs-grid,
    .metrics-grid {
        grid-template-columns: 1fr;
    }

    .phase-item {
        grid-template-columns: 1fr;
    }

    .access-box {
        padding: 2rem;
    }
}
</style>
