# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# Database
DATABASE_URL=postgresql://sword_user:sword_password@localhost:5432/sword_intel

# Redis (for WebSocket multi-instance support)
REDIS_URL=redis://localhost:6379

# WebSocket Server
WS_PORT=8080
WS_HOST=0.0.0.0
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# WebAuthn
WEBAUTHN_RP_NAME="SWORD Intelligence"
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# OSINT Feed API Keys (all free, registration required)
# AlienVault OTX - Sign up at https://otx.alienvault.com/
OTX_API_KEY=

# VirusTotal - Sign up at https://www.virustotal.com/
# Free tier: 500 req/day, 4 req/min
VIRUSTOTAL_API_KEY=

# TRM Labs - Sign up at https://www.trmlabs.com/
TRM_API_KEY=

# DarkSearch - Sign up at https://darksearch.io/
DARKSEARCH_API_KEY=

# Post-Quantum Crypto Keys
# PQC_DILITHIUM_PRIVATE_KEY=
# PQC_KYBER_PRIVATE_KEY=

# Hardware Security Module (HSM)
HSM_PROVIDER=software
# HSM_LIBRARY_PATH=/usr/lib/libykcs11.so
# HSM_SLOT_ID=0
# HSM_PIN=
# HSM_REGION=us-east-1
# HSM_VAULT_NAME=
# HSM_PROJECT_ID=
# HSM_KEYRING_NAME=

# Email Service (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@sword-intel.example
# SMTP_PASSWORD=

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# Security Settings
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Environment
NODE_ENV=development
